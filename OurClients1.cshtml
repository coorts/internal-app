@{
    var db = Database.Open("BSE");
    var Grid = new WebGrid(db.Query
        ("select client_no, client_name, dda_amt, sav_amt, lns_amt, exposure, ann_trans, ann_rev, rar, total_capital, net_cont, roe from dbo.mwv_t_bse_clients_2014_02"), defaultSort: "client_name", canPage: true, rowsPerPage: 25);
    //Grid.Pager(WebGridPagerModes.NextPrevious);
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
</script>
<script>
    $(document).ready(function () {
        $("tr").on({
            mouseover: function () { $(this) },
            mouseout: function () { $(this) },
            click: function () { location.href = '/ClientSummary1/' + $(this).find('td:first').text(); }
        });
    });
</script>
<html>
<head>
    <meta charset="utf-8" http-equiv="X-UA-Compatible" content="IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <link rel="stylesheet" type="text/css" href="~/Content/Site1.css">
    <title>Banker Sales Environment</title>
</head>
<body>
    <wrapper id="top">
        <img id="logo" src="~/Images/WClogo.png" width="132" height="52" />
        <div class="title">
            <strong> Banker Sales Environment </strong>
            <div id="login">
                Welcome, (userID)
            </div>
        </div>
        <form class="top-search">
            <input type="text" required class="search" placeholder="search">
            <input type="button" class="button" value="Search">
        </form>
    </wrapper>
    <div id="mainContent">
        <nav id="nav">
            <ul class="headerTabs">
                <li>
                    <a href="http://whiteclay.com">
                        <div class="navTabs">
                            <strong>My Desktop</strong>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="~/OurClients1.cshtml">
                        <div class="navTabs">
                            <strong>Our Clients</strong>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="http://whiteclay.com">
                        <div class="navTabs">
                            <strong>My Workplace</strong>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="http://whiteclay.com">
                        <div class="navTabs">
                            <strong>My Portfolio</strong>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="http://whiteclay.com">
                        <div class="navTabs">
                            <strong>My Production</strong>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="http://whiteclay.com">
                        <div class="navTabs">
                            <strong>Leaderboards</strong>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="http://whiteclay.com">
                        <div class="navTabs">
                            <strong>My Reports</strong>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="http://whiteclay.com">
                        <div class="navTabs">
                            <strong>Admin</strong>
                        </div>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="content">
            <div class="page_selection">
                <form class="page_selection" action="" method="get">
                    <select name="Views">
                        <option value="Retail">Retail</option>
                        <option value="Commercial">Commercial</option>
                    </select>
                    <input class="button" type="submit" name="action" value="Choose View" />
                </form>
                <form class="page_selection" method="get">
                    <select id="rpp1" name="rpp1">
                        <option selected="@(Request["rpp1"] == "15")" value="15">15</option>
                        <option selected="@(Request["rpp1"] == "25")" value="25">25</option>
                        <option selected="@(Request["rpp1"] == "50")" value="50">50</option>
                        <option selected="@(Request["rpp1"] == "75")" value="75">75</option>
                        <option selected="@(Request["rpp1"] == "100")" value="100">100</option>
                    </select>
                    <input class="button" type="submit" name="action" value="Go" />
                </form>
            </div>
            @Grid.GetHtml(
        tableStyle: "main_table",
        alternatingRowStyle: "alternate",
        footerStyle: "grid-footer",
        mode: WebGridPagerModes.All,
        firstText: "<< First",
        previousText: "< Prev",
        nextText: "Next >",
        lastText: "Last >>",
        columns: Grid.Columns(
        Grid.Column("client_no", "Client Number"),
        Grid.Column("client_name", "Client Name", style: "name"),
        Grid.Column("dda_amt", "DDA Amount", style: "dda"),
        Grid.Column("sav_amt", "Savings", style: "savings"),
        Grid.Column("lns_amt", "Loans", style: "loans"),
        Grid.Column("exposure", "Exposure", style: "exposure"),
        Grid.Column("ann_trans", "Annual Trans", style: "ann-trans"),
        Grid.Column("ann_rev", "Annual Revenue", style: "ann-rev"),
        Grid.Column("rar", "RAR", style: "rar"),
        Grid.Column("total_capital", "Total Capital", style: "tot-cap"),
        Grid.Column("net_cont", "Net Contribution", style: "net-con"),
        Grid.Column("roe", "ROE", style: "roe")
        )
        )

        </div>
    </div>
</body>
</html>